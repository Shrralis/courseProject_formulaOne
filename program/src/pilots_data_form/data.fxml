<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox fx:controller="pilots_data_form.Controller" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
      minWidth="-Infinity" prefHeight="355.0" prefWidth="300.0" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.111"
      xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <children>
      <TextField fx:id="name" promptText="Ім'я" />
      <TextField fx:id="surname" promptText="Прізвище" />
      <DatePicker fx:id="birthdate" prefHeight="27.0" prefWidth="282.0" promptText="Дата народження" />
      <TextField fx:id="birthplace" promptText="Місце народження" />
      <TextField fx:id="maritalStatus" promptText="Сімейний статус" />
      <TextField fx:id="height" promptText="Ріст" />
      <TextField fx:id="weight" promptText="Вага" />
      <DatePicker fx:id="firstRaceDate" prefHeight="27.0" prefWidth="282.0" promptText="Дата першої гонки" />
      <TextField fx:id="firstRacePlace" promptText="Місце першої гонки" />
      <HBox alignment="CENTER_RIGHT" spacing="16.0">
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" />
         </padding>
         <children>
            <Button mnemonicParsing="false" text="Відміна" onMouseClicked="#onMouseCancelClick" />
            <Button mnemonicParsing="false" text="ОК" onMouseClicked="#onMouseOkClick" />
         </children>
      </HBox>
   </children>
</VBox>
